<%- include('./partials/header.ejs', {title:"Edit Collection"})%>

<body>
    <form action="/collexns/<%= collexn._id %>?_method=PUT" method="POST">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= collexn.name %>" required>
    
        <label for="winesIncluded">Wines Included:</label>
        <select id="winesIncluded" name="winesIncluded" multiple>
            <!-- Populate options dynamically from database -->
            <% wines.forEach(wine=> { %>
                <option value="<%= wine._id %>" <% if (collexn.winesIncluded.includes(wine._id)) { %> selected <% } %>
                        >
                        <%= wine.name %>
                </option>
                <% }); %>
        </select>
    
        <button type="submit">Update collection</button>
    </form>
</body>
</html>